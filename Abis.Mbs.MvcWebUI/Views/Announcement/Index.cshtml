@model Abis.Mbs.MvcWebUI.Models.AnnouncementListViewModel
@{
    Layout = "~/Views/_Layout.cshtml";
}

<div>
    <table class="table table-responsive">
        <tr>
            <td>Title</td>
            <td>Description</td>
            <td>Date</td>


        </tr>
        @foreach (var announcement in Model.Announcements)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => announcement.ATitle)</td>
            <td><li><a href="#">@announcement.ADescription</a></li></td>
            @*<td>@announcement.ADescription</td>*@
            <td>@Html.DisplayFor(modelItem => announcement.ACreateDate)</td>
            @*<td><a class="" asp-controller="Admin" asp-action="Update" asp-route-announcementId="@announcement.AnnouncementId">Update</a></td>*@


        </tr>

        }
    </table>
</div>
